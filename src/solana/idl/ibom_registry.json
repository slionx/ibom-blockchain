{
  "version": "0.1.0",
  "name": "ibom_registry",
  "instructions": [
    {
      "name": "registerWork",
      "accounts": [
        { "name": "authority", "isMut": true, "isSigner": true },
        { "name": "work", "isMut": true, "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "workId", "type": { "array": ["u8", 32] } },
        { "name": "metadataUri", "type": "string" },
        { "name": "fingerprintHash", "type": { "array": ["u8", 32] } },
        { "name": "creators", "type": { "vec": { "defined": "CreatorShare" } } }
      ]
    },
    {
      "name": "updateWork",
      "accounts": [
        { "name": "authority", "isMut": false, "isSigner": true },
        { "name": "work", "isMut": true, "isSigner": false }
      ],
      "args": [
        { "name": "metadataUri", "type": "string" },
        { "name": "fingerprintHash", "type": { "array": ["u8", 32] } },
        { "name": "creators", "type": { "vec": { "defined": "CreatorShare" } } }
      ]
    },
    {
      "name": "linkMint",
      "accounts": [
        { "name": "authority", "isMut": true, "isSigner": true },
        { "name": "work", "isMut": true, "isSigner": false }
      ],
      "args": [
        { "name": "nftMint", "type": "publicKey" },
        { "name": "collection", "type": { "option": "publicKey" } }
      ]
    },
    {
      "name": "setPricing",
      "accounts": [
        { "name": "authority", "isMut": true, "isSigner": true },
        { "name": "work", "isMut": true, "isSigner": false }
      ],
      "args": [
        { "name": "paymentMint", "type": { "option": "publicKey" } },
        { "name": "price", "type": { "option": "u64" } }
      ]
    }
  ],
  "accounts": [
    {
      "name": "Work",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "bump", "type": "u8" },
          { "name": "authority", "type": "publicKey" },
          { "name": "workId", "type": { "array": ["u8", 32] } },
          { "name": "metadataUri", "type": "string" },
          { "name": "fingerprintHash", "type": { "array": ["u8", 32] } },
          { "name": "creators", "type": { "vec": { "defined": "CreatorShare" } } },
          { "name": "registeredAt", "type": "i64" },
          { "name": "version", "type": "u32" },
          { "name": "linkedMint", "type": { "option": "publicKey" } },
          { "name": "collection", "type": { "option": "publicKey" } },
          { "name": "paymentMint", "type": { "option": "publicKey" } },
          { "name": "price", "type": { "option": "u64" } }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "CreatorShare",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "pubkey", "type": "publicKey" },
          { "name": "share", "type": "u16" }
        ]
      }
    }
  ],
  "errors": [
    { "code": 6000, "name": "UriTooLong", "msg": "metadata_uri exceeds MAX_URI_LEN" },
    { "code": 6001, "name": "TooManyCreators", "msg": "creators length exceeds MAX_CREATORS" },
    { "code": 6002, "name": "InvalidSharesSum", "msg": "sum(creators.share) must equal 10000 basis points" },
    { "code": 6003, "name": "Unauthorized", "msg": "only authority can modify this work" }
  ],
  "metadata": { "address": "IBoMReg1strY1111111111111111111111111111111" }
}
