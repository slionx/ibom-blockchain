NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_COMMITMENT=confirmed
NEXT_PUBLIC_IBOM_PROGRAM_ID=ReplaceWithDeployedProgramId

NEXT_PUBLIC_IBOM_TOKEN_MINT=ReplaceWithMintAddress
NEXT_PUBLIC_SONGS_COLLECTION_MINT=ReplaceWithMintAddress
NEXT_PUBLIC_PAYMENT_MINT=ReplaceWithMintAddress
NEXT_PUBLIC_REGISTRY_PROGRAM_ID=ReplaceWithProgramId
NEXT_PUBLIC_HELIUS_API_KEY=ReplaceWithHeliusApiKey
HELIUS_API_KEY=ReplaceWithHeliusApiKey
# If using devnet with Helius RPC
# HELIUS_DEVNET=1

# For uploading metadata JSON to IPFS via nft.storage
NFT_STORAGE_TOKEN=ReplaceWithNftStorageToken

# Media signing (demo)
MEDIA_SIGN_SECRET=ReplaceWithStrongSecret
MEDIA_SIGN_TTL_MS=120000
MEDIA_STREAM_TTL_MS=60000

# Server-side (used by API routes)
# If provided, overrides NEXT_PUBLIC_*
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_COMMITMENT=confirmed
REGISTRY_PROGRAM_ID=ReplaceWithProgramId

# Server wallet for signing registry transactions (choose one)
# 1) Inline secret key JSON array (same format as Solana id.json)
# REGISTRY_AUTHORITY_SECRET_KEY=[1,2,3,...]
# 2) Base64-encoded secret key
# REGISTRY_AUTHORITY_SECRET_KEY=BASE64_ENCODED_SECRET
# 3) Path to keypair file
# REGISTRY_AUTHORITY_KEYPAIR_PATH=/Users/you/.config/solana/id.json

# Optional API auth: set to enforce requests include x-ibom-api-key header
# REGISTRY_API_KEY=ReplaceWithStrongApiKey
